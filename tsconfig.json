{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "lib": ["es6", "es2017"],
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist", "**/*-test.ts"]
}
