{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6",
            "esnext.asynciterable"
        ],
        "types": [
            "node",
            "mocha"
        ],
        "rootDir": "src",
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "noUnusedLocals": true  
    },
    "exclude": [
        "node_modules"
    ]
}